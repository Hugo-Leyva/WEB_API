@model List<Producto>
@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center">
    <h1 class="display-4">Lista de productos</h1>
    <p>Mini Súper.</a>.</p>
</div>



<div class="card">
    <div class="card-header">
        Lista de productos
    </div>
    <div class="card-body">

        <a asp-action="Producto" asp-controller="Home" asp-route-idProducto="0" class="btn btn-primary btn-sm text-white">Nuevo Producto</a>
        @*<a asp-action="test" asp-controller="Home" class="btn btn-success">test</a>*@
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>IdProducto</th>
                    <th>Nombre</th>
                    <th>Marca</th>
                    <th>Costo unitario</th>
                    <th>Cantidad</th>
                    <th>Precio de venta</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model){
                    <tr>
                        <td>@item.IdProducto</td>
                        <td>@item.Nombre</td>
                        <td>@item.Marca</td>
                        <td>@item.CostoUnitario</td>
                        <td>@item.Cantidad</td>
                        <td>@item.PrecioVenta</td>
                        <td>
                            <a asp-action="Detalles" asp-controller="Home" asp-route-IdProducto="@item.IdProducto" class="btn btn-warning btn-sm">Detalles</a>
                            <a asp-action="Producto" asp-controller="Home" asp-route-IdProducto="@item.IdProducto" class="btn btn-success btn-sm">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Home" asp-route-IdProducto="@item.IdProducto" class="btn btn-danger btn-sm">Eliminar</a>
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>